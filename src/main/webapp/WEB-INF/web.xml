<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	metadata-complete="false" version="3.1">
	<display-name>tm</display-name>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
				classpath:META-INF/config/a*.xml;classpath:META-INF/config/*mysql*.xml
		</param-value>
	</context-param>
	<servlet>
		<servlet-name>Jersey Servlet</servlet-name>
		<servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
		<init-param>
			<param-name>jersey.config.server.provider.classnames</param-name>
			<param-value>org.glassfish.jersey.filter.LoggingFilter</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>index</servlet-name>
		<jsp-file>/index.html</jsp-file>
	</servlet>
	<servlet>
		<servlet-name>site-index</servlet-name>
		<jsp-file>/site/index.html</jsp-file>
	</servlet>	
	<servlet>
		<servlet-name>classes-index</servlet-name>
		<jsp-file>/classes/index.html</jsp-file>
	</servlet>	
	<servlet-mapping>
		<servlet-name>classes-index</servlet-name>
		<url-pattern>/classes/passes/*</url-pattern>
		<url-pattern>/classes/classes/*</url-pattern>
		<url-pattern>/classes/passes</url-pattern>
		<url-pattern>/classes/password-reset</url-pattern>
		<url-pattern>/classes/password-change</url-pattern>
		<url-pattern>/classes</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>site-index</servlet-name>
		<url-pattern>/site/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>site-index</servlet-name>
		<url-pattern>/site/password-reset</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>site-index</servlet-name>
		<url-pattern>/site/password-change</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>site-index</servlet-name>
		<url-pattern>/site/signup</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>site-index</servlet-name>
		<url-pattern>/site/get-started</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>index</servlet-name>
		<url-pattern>/signin</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>index</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>index</servlet-name>
		<url-pattern>/diagnostics</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>index</servlet-name>
		<url-pattern>/students</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>index</servlet-name>
		<url-pattern>/teachers</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>index</servlet-name>
		<url-pattern>/attendence</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>index</servlet-name>
		<url-pattern>/schedule</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>index</servlet-name>
		<url-pattern>/home</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>index</servlet-name>
		<url-pattern>/setup/*</url-pattern>
	</servlet-mapping>
	<filter-mapping>
		<filter-name>springFilter</filter-name>
		<url-pattern>/member/*</url-pattern>
		<dispatcher>FORWARD</dispatcher>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>
	<filter-mapping>
		<filter-name>clientFilter</filter-name>
		<url-pattern>/member/*</url-pattern>
		<dispatcher>FORWARD</dispatcher>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>
	<filter-mapping>
		<filter-name>tokenFilter</filter-name>
		<url-pattern>/token</url-pattern>
		<dispatcher>FORWARD</dispatcher>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>
	<filter-mapping>
		<filter-name>siteFilter</filter-name>
		<url-pattern>/site/api/*</url-pattern>
		<dispatcher>FORWARD</dispatcher>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>
	<filter-mapping>
		<filter-name>authFilter</filter-name>
		<url-pattern>/api/*</url-pattern>
		<dispatcher>FORWARD</dispatcher>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>
	<filter-mapping>
		<filter-name>memAuthFilter</filter-name>
		<url-pattern>/member/api/v1/member/*</url-pattern>
		<dispatcher>FORWARD</dispatcher>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>
	<filter-mapping>
		<filter-name>memAuthFilter</filter-name>
		<url-pattern>/member/api/v1/members</url-pattern>
		<dispatcher>FORWARD</dispatcher>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>
	<filter-mapping>
		<filter-name>transactionFilter</filter-name>
		<url-pattern/>
		<dispatcher>FORWARD</dispatcher>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
</web-app>
